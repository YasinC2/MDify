    "Text Editor"
  ],
  "orientation": "any",
  "related_applications": [],
  "screenshots": [{
      "src": "img/screenshot-desktop.png",
      "sizes": "1280x800",
      "type": "image/png",
      "form_factor": "wide"
    },
    {
      "src": "img/screenshot-mobile.png",
      "sizes": "540x720",
      "type": "image/png",
      "form_factor": "narrow"
    }
