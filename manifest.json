  "scope": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#2b1100",
  "icons": [{
      "src": "img/MDify-192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "img/MDify-512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
