{
  "project_name": "MDify: Markdown RTL Editor",
  "description": "A lightweight PWA markdown editor with RTL/LTR support, live preview, dark mode, export features, font customization, and offline file access. Designed for Persian content but supports all languages.",
  "tech_stack": {
    "frontend": ["HTML", "CSS", "JavaScript", "Toast UI Editor"],
    "frameworks_libraries": ["Toast UI Editor", "File System Access API", "LocalStorage", "Service Worker (PWA)"],
    "fonts": ["Vazirmatn", "Tahoma", "Roboto Mono", "Google Fonts"],
    "tools": ["VS Code", "Git", "PWA Manifest", "Icons"]
  },
  "features": {
    "core_editor": {
      "live_preview": true,
      "markdown_support": true,
      "export_as_markdown": true,
      "export_as_html": true,
      "toolbar_customization": true
    },
    "rtl_ltr_support": {
      "toggle_direction": true,
      "auto_direction_detection": true,
      "per_paragraph_direction": true,
      "keyboard_shortcuts": {
        "rtl": "Ctrl+Shift+R",
        "ltr": "Ctrl+Shift+L"
      }
    },
    "ui_theme_customization": {
      "dark_mode_toggle": true,
      "auto_theme_by_os": true,
      "theme_presets": ["Light", "Dark", "Solarized", "Dracula"],
      "font_selector": true,
      "font_size_adjustment": true
    },
    "file_handling": {
      "load_from_local": true,
      "save_to_local": true,
      "drag_and_drop_file": true,
      "support_markdown_and_html": true,
      "file_system_access_api": true,
      "custom_file_extensions": [".md", ".html"]
    },
    "autosave_localstorage": {
      "autosave_interval_sec": 10,
      "save_to_localstorage": true,
      "unsaved_warning": true,
      "versioning": {
        "enabled": false,
        "history_limit": 5
      }
    },
    "offline_pwa": {
      "pwa_support": true,
      "installable": true,
      "offline_ready": true,
      "service_worker": true,
      "manifest_json": true,
      "accept_markdown_file_handlers": true,
      "icon_support": true
    },
    "productivity": {
      "word_count": true,
      "reading_time": true,
      "focus_mode": true,
      "preview_only_mode": true,
      "shortcuts_panel": true
    },
    "enhancements": {
      "notion_style_quick_insert": true,
      "multi_tab_support": false,
      "plugin_architecture": false,
      "cloud_sync": {
        "google_drive": false,
        "dropbox": false,
        "webdav": false
      }
    },
    "mobile_responsive": true
  }
}
